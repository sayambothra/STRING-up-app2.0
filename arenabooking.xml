<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backhome"
    tools:context=".MainActivity">




    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SELECT SPORTS"
            android:fontFamily="@font/black_ops_one"
            android:textSize="26dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="220dp"
            android:layout_height="1.8dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"

            />



    </LinearLayout>



    <ScrollView
        android:id="@+id/scrolviewlayout"
        android:layout_width="match_parent"
        android:layout_marginBottom="68dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/secondlayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"

                android:layout_below="@id/topbar"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_back_arena_booking"
                android:layout_marginTop="230dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="11dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/racketthree" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/black_ops_one"
                    android:text="BADMINTON"
                    android:layout_marginBottom="38dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="26dp" />





            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdlayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/btn_back_arena_booking"
                android:layout_below="@id/secondlayout"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="20dp"
                >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rackettwo" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/black_ops_one"
                    android:text="TENNIS"
                    android:layout_marginBottom="38dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="26dp" />





            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fourthlayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/thirdlayout"
                android:background="@drawable/btn_back_arena_booking"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/squash" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/black_ops_one"
                    android:text="SQUASH"
                    android:layout_marginBottom="38dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="26dp" />





            </RelativeLayout>

        </LinearLayout>

    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#83F987">
        <LinearLayout
            android:id="@+id/bottembar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="#83F987"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_date_range_24" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_baseline_location_on_24" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/stringupupscreen" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_baseline_notifications_24" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_baseline_chat_24" />


        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>
